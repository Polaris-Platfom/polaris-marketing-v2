# ==============================================
# üîê POLARIS MARKETING - PRODUCTION ENV TEMPLATE
# ==============================================
# Copy this file to /opt/polaris-marketing/.env on the server
# Fill real secrets directly on the server (do not commit secrets)

# -------- Core App URLs (Public) --------
NEXT_PUBLIC_API_URL=https://api.polarisplatform.ch
NEXT_PUBLIC_PLATFORM_URL=https://app.polarisplatform.ch
NEXT_PUBLIC_MARKETING_URL=https://polarisplatform.ch
NEXT_PUBLIC_APP_URL=https://app.polarisplatform.ch
NEXT_TELEMETRY_DISABLED=1

# -------- Email (SMTP) --------
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_PASSWORD=
SMTP_FROM=noreply@polarisplatform.ch
SMTP_FROM_NAME=Polaris Platform
EMAIL_FROM=noreply@polarisplatform.ch
CONTACT_EMAIL=hello@polarisplatform.ch
NEWSLETTER_EMAIL=newsletter@polarisplatform.ch
SUPPORT_EMAIL=support@polarisplatform.ch

# -------- Google Sheets (Service Account) --------
GOOGLE_SHEETS_CLIENT_EMAIL=
GOOGLE_SHEETS_PRIVATE_KEY=""
GOOGLE_SHEETS_SHEET_ID=

# Alternative naming used internally; keep in sync if you use these
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=""
GOOGLE_SHEETS_ID=

# -------- Analytics (optional) --------
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=

# -------- Security Headers (optional) --------
NEXT_PUBLIC_CSP_NONCE=

# -------- Traefik / Docker image --------
# Email address for Let's Encrypt notifications
LETSENCRYPT_EMAIL=admin@polarisplatform.ch
# Full image reference to deploy (e.g., GHCR image)
IMAGE_NAME=ghcr.io/YOUR_GH_USER_OR_ORG/polaris-marketing:latest


